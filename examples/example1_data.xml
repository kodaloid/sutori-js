<?xml version="1.0" encoding="utf-8"?>
<document xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
	<moments>
		<!--
			tips:
			- You can have as many moments as you want.
			- The id attribute gives a moment an identifier.
			- Goto and option target are used to identify the next moment.
			- Primary attributes for moments are id and goto.
			- Any other attribute is stored in the Attributes property.
			- A moment element must always have an elements child element.
		-->
		<moment>
			<elements>
				<!--
					tips:
					- The lang attribute is used to specify culture.
					- Primary attributes for elements are lang, target.
					- Option elements also require solver and solver_callback.
					- Any other attribute is stored in the Attributes property.
				-->
				<text data_example="test">Hi there!</text>
			</elements>
		</moment>
		<moment data_example="another test">
			<elements>
				<text>This is a demonstration showing how vns-js works!</text>
			</elements>
		</moment>
		<moment id="test">
			<elements>
				<text>Which door do you want to open?</text>
				<option target="door1">Door 1</option>
				<option target="door2">Door 2</option>
				<option target="door3">Door 3</option>
				<text lang="fr-FR">Quelle porte voulez-vous ouvrir?</text>
				<option lang="fr-FR" target="door1">Porte 1</option>
				<option lang="fr-FR" target="door2">Porte 2</option>
				<option lang="fr-FR" target="door3">Porte 3</option>
			</elements>
		</moment>
		<moment id="door1" goto="end">
			<elements>
				<image lang="all">assets/door1.png</image>
				<!-- <audio>door1.mp3</audio> -->
				<text>You picked Door 1!</text>
				<text lang="fr-FR">Tu as choisi la porte 1!</text>
			</elements>
		</moment>
		<moment id="door2" goto="end">
			<elements>
				<image lang="all">assets/door2.png</image>
				<!-- <video>door2.mp4</video> -->
				<text>You picked Door 2!</text>
				<text lang="fr-FR">Tu as choisi la porte 2!</text>
			</elements>
		</moment>
		<moment id="door3" goto="end">
			<elements>
				<image lang="all">assets/door3.png</image>
				<!-- <audio>door3.mp3</audio> -->
				<text>You picked Door 3!</text>
				<text lang="fr-FR">Tu as choisi la porte 3!</text>
			</elements>
		</moment>
		<moment id="end">
			<elements>
				<text>This is the end.</text>
			</elements>
		</moment>
	</moments>
</document>